<%= render "shared/header" %>

<p id="notice"><%= notice %></p>

<h1>Schedules</h1>

<% if user_signed_in? %>
  <%= link_to 'イベント追加', new_schedule_path %>
  <%= link_to '車追加', new_car_path %>
<% end %>

<div>
<%= month_calendar events: @schedules do |date, schedules| %>
  <%= date.day %>

  <div>
  <% schedules.each do |schedule| %>
    <div>
      <%= schedule.user.nickname %>
      <%= link_to schedule.title, schedule_path(schedule.id) %>
      <br>
      <%= schedule.start_time.strftime("%H:%M") %> <a>〜</a>
      <%= schedule.end_time.strftime("%H:%M") %>
    </div>
  <% end %>
  </div>

<% end %>
</div>




