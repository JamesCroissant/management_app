<div class='form-header'>
  <h1 class='form-header-text'>
    車編集機能
  </h1>
</div>

<%= form_with(model: @car, local: true) do |f| %>

<%= render 'shared/error_messages', model: f.object %>

  <div class="form-group">
    <div class="form-text-wrap">
      <label class="form-text">車名</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_area :car_name, class:"input-default", id:"car-title" %>
  </div>


  <div class="form-group">
    <div class="form-text-wrap">
      <label class="form-text">車のナンバー</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_area :car_number, class:"input-default", id:"car-title" %>
  </div>

  <div class="form-group">
    <div class="form-text-wrap">
      <label class="form-text">車種</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_area :car_model, class:"input-default", id:"car-title" %>
  </div>


  <div class="car-edit-submit">
    <%= f.submit "変更する", class:"save-btn"%>
    <%= link_to "戻る", car_path(@car.id), class:"back-btn"%>
  </div>

<% end %>
